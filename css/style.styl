$body=#f6f6f6
$primary=#0098E3
$line=#e5e5e5
$desc=#979799
$background=#fff
$warn=#FF3900
$garyBackground=#E8E8E8
#app{
  width 100%;
  min-height 100vh;
  overflow hidden;
  background $body;

  //======================  iconfont ===============================
  .iconfont{
    font-size inherit;
  }

  //========================IconText==================================
  //.icon_text{
  //  display inline-block;
  //}
  //.icon_text.desc-gray{
  //  color $desc;
  //}



  //=======================Vant Info Btn==================================
  .van-button--info{
    background-color $primary;
    border 1px solid $primary;
    padding 0 10px;
  }
  .van-button--plain.van-button--info{
    background none;
    color $primary;
  }

 //=========================    企业信息    ==============================
  ._app-search{
    .van-search__action{
      color $background
    }
    .van-search__action:active{
      background-color $primary;
    }
  }
  ._app-filter{
    .filter-row{
      padding 10px;
      .filter-item{
        font-size 18px;
        text-align center;
        i{
          color $primary;
        }
      }
      .left-line{
        border-left 1px solid $line
      }
    }
  }
  .info_app-list{
    padding 15px;
    .list-item{
      display flex;
      padding 10px;
      margin-bottom 10px;
      background $background;
      border-radius 5px;
      box-shadow 2px 2px 4px $line;
      ._item-logo{
        height 80px;
        line-height 80px;
        width: 80px;
        text-align center;
        font-size 30px;
      }
      ._item-info{
        flex 1 1 auto;
        ._info-name{
          height 50px;
          line-height 50px;
          font-size 18px;
        }
        ._info-desc{
          font-size 12px;
          color $desc;
          span:last-child{
            margin-left 30px;
          }
        }
      }
    }
  }



//==========================企业基本信息================================
  ._app-top{
    width 100%;
    height  160px;
    position  relative;
    z-index  999;
    overflow  hidden;
    text-align  center;
    color $background;
    p{
      margin 10px;
    }
    ._top-logo{
      font-size 30px;
    }
    ._top-name{
      font-size 20px;
    }
    ._top-legal,._top-tel{
      font-size 12px;
    }
  }
  ._app-top:after{
    content  '';
    width  110%;
    height  160px;
    position  absolute;
    left  -5%;
    top  0;
    z-index  -1;
    border-radius  0 0 50% 50%;
    background  $primary;
  }

  ._app-content{
    ._content-content{
      margin 10px;
      border-radius 5px;
      background $background
      padding 30px 10px;
      .content-item{
        padding 15px 0;
        border-bottom 1px solid $line;
        font-size 14px;
      }
    }
  }



//==========================企业制度================================
  .institution_app-list{
    margin 10px;
    background $background;
    border-radius 5px;
    padding 10px;
    .list-filter{
      text-align center;
      padding 10px;
      color $primary;
      border-bottom 1px solid $line;
    }
    .list-item{
      display flex;
      padding 10px;
      border-bottom 1px solid $line;
      ._item-left{
        flex 1 1 auto;
        ._item-name{
          margin 5px 0;
          font-size 18px;
        }
        ._item-desc{
          margin 5px 0;
          font-size 14px;
        }
      }
      ._item-right{
        width 20px;
        line-height 80px;
        text-align center;
      }
    }
  }



//==========================  巡查日志    ==================================

  ._app-filter{
    .van-dropdown-menu{
      background none;
    }
    .van-hairline--top-bottom:after{
      border none;
    }
  }

  .log_app-list{
    padding 15px;
    .list-item{
      padding 10px;
      margin-bottom 10px;
      background $background;
      border-radius 5px;
      box-shadow 2px 2px 4px $line;
      .item-li{
        margin 10px 0;
        .icon_text{
          font-size 14px;
        }
        .li-btn{
          float right;
        }
      }
      .item-title{
        font-size 14px;
        height 20px;
        .li-tittle{
          color:$primary
          float left;
          margin-left 5px;
        }
        .li-except{
          float right;
        }
        .normal{
          color:$primary
        }
        .except{
          color:$warn
        }
        .li-title-icon{
          float left;
          display inline-block;
          position relative;
          width 20px;
          height 20px;
          .icon-bottom{
            border 10px solid transparent;
            width 0;
            border-bottom 10px solid $warn;
            position absolute;
            top -10px;
          }
          .icon-top {
            border 10px solid transparent;
            width 0;
            border-top 10px solid $warn;
            position absolute;
            bottom -10px;
          }
          span{
            font-size 10px;
            position absolute;
            top 3px;
            left 5px;
            color $background;
          }
        }
      }
      .bottom-line{
        padding-bottom 5px;
        border-bottom 1px solid $line;
      }
    }
  }


//==========================  巡查详情  =====================================

  ._app-card{
    margin 10px;
    background $background;
    border-radius 5px;
    box-shadow 2px 2px 4px $line;
    .card-title{
      background $garyBackground;
      border-top-left-radius 5px;
      border-top-right-radius 5px;
      color $primary;
      padding 10px;
    }
    .card-content{
      .content-item{
        padding 10px 0;
        margin 0 10px;
        border-bottom 1px solid $line;
        font-size 12px;
        line-height 24px;
        display flex;
        .icon_text{
          flex 0 0 90px;
          span{
            margin-left 5px;
          }
        }
        ._item-field{
          flex 1 1 auto;
          .field-img{
            margin: 0 10px 10px 0;
          }
          .field-img:last-of-type{
            margin-right: 0;
          }
          .except{
            color $warn;
          }
          .normal{
            color $primary;
          }
          .van-cell{
            padding 0;
          }
          .van-uploader__preview-image,.van-uploader__upload{
            width 3.2rem;
            height 3.2rem;
          }
          .van-uploader__upload{
            margin 0;
          }
        }
      }
      ._card-tab-content{

        ._content-item{
          display flex;
          padding 10px 0;
          font-size 12px;
          border-bottom 1px solid $line;
          ._item-no{
            flex 0 0 50px;
            text-align center;
            height: 24px;
            line-height: 24px;
          }
          ._item-standard{
            flex 1 1 auto;
            text-align center;
            word-break:keep-all;
            white-space:nowrap;
            overflow:hidden;
            text-overflow:ellipsis;
            height: 24px;
            line-height: 24px;
          }
          ._item-check{
            flex 0 0 80px;
            text-align center;
          }
          .normal{
            color $primary;
          }
          .except{
            color $warn;
          }
        }
        ._content-item.item-title{
          background $primary;
          color $background;
          font-size 14px;
        }
      }
    }
  }

  ._app-row-btn{
    text-align center;
    margin 20px;
    .van-button{
      width 40%;
      margin-right 30px;
    }
    .van-button:last-of-type{
      margin-right 0;
    }
  }
}